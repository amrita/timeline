<div id="timeline-content"> 
  <div id="loader" class="commontreb">Please wait while your isles load !</div>
  <div id="last-saved" class="commontreb"></div>
  <div id="help-screen"><div id="close-help"></div></div>
  <div id="helper-crab"></div>
  
  <div id="events" class="commonalign"></div>
  
  <div id="main">
    <!--
    <div id="island-scroll">
    </div>
    <div id="island-iconbar-slider"></div>
    -->
    <div id="content-scroll">
      <div id="islands">
      </div>
      <div id="droppable">
      </div>
    </div>
    <table id="slider-elements" cellpadding="10"><tr>
      <td><div id="prev" class="arrows"></div></td>
      <td><div id="content-slider"></div></td>
      <td><div id="next" class="arrows"></div></td>
    </table></tr>
    <div id="deleteevent-alert"><p><span class="ui-icon ui-icon-alert" style="float:left; margin: 0 7px 20px 0;"></span>Are you sure you want to delete this isle ?</p></div>
  </div>
  <div id="island-helper">
	<!-- this is where the helper gets appended for temporary use -->
  </div>

  <div id="intervals" class="common commonalign"></div>
  
  <!-- Adding the event post form here -->
  <div id="forms" style="display:none">
    
    <table>
     <% form_for :event, :url => {:action => :get_events}, :html => {:id => 'get_event_rows' } do |form| %>
     <tr><td class="sign-buttons"><%= submit_tag "Get Events", :class => "submit", :id=> "getEventsButton" %></td></tr>
     <% end %>
   </table>
    
    <table id="eventrow" class="clean" cellpadding="6">
       <% form_for :event, :url => {:action => :add_event}, :html => {:id => 'new_event_row' } do |form| %>
         <tr><td>eventid</td><td><%= form.text_field(:eventid) %></td></tr>
         <tr><td>desc</td><td><%= form.text_field(:desc) %></td></tr>
         <tr><td>div</td><td><%= form.text_field(:div) %></td></tr>
         <tr><td>top</td><td><%= form.text_field(:top) %></td></tr>
         <tr><td>left</td><td><%= form.text_field(:left) %></td></tr>
         <tr><td>year</td><td><%= form.text_field(:year) %></td></tr>
         <tr><td>month</td><td><%= form.text_field(:month) %></td></tr>
         <tr><td>day</td><td><%= form.text_field(:day) %></td></tr>
         <tr><td>hour</td><td><%= form.text_field(:hour) %></td></tr>
         <tr><td>interval</td><td><%= form.text_field(:interval) %></td></tr>
         <tr><td>icon</td><td><%= form.text_field(:icon) %></td></tr>    
         <tr><td></td>
             <td class="sign-buttons"><%= submit_tag "Add Event", :class => "submit", :id=> "addEventButton" %></td>
         </tr>
       <% end %>
     </table>
     
     
     <table>
     <% form_for :event, :url => {:action => :update_event_description}, :html => {:id => 'update_event_desc' } do |form| %>
     <tr><td>eventid</td><td><%= form.text_field(:update_eventid) %></td></tr>
     <tr><td>desc</td><td><%= form.text_field(:update_desc) %></td></tr>
     <tr><td class="sign-buttons"><%= submit_tag "Update Event Desc", :class => "submit", :id=> "updateDescButton" %></td></tr>
     <% end %>
     </table>
     
     <table>
     <% form_for :event, :url => {:action => :delete_event}, :html => {:id => 'delete_event_row' } do |form| %>
     <tr><td>eventid</td><td><%= form.text_field(:delete_eventid) %></td></tr>
     <tr><td class="sign-buttons"><%= submit_tag "Delete Event", :class => "submit", :id=> "deleteEventButton" %></td></tr>
     <% end %>
     </table>
     
     <!-- Adding the Media form here -->
   <table>
     <% form_for :event, :url => {:action => :update_event_notes_sketch}, :html => {:id => 'update_event_notes_sketch' } do |form| %>
     <tr><td>eventid</td><td><%= form.text_field(:eventnotes_eventid) %></td></tr>
     <tr><td>eventnotes</td><td><%= form.text_field(:eventnotes) %></td></tr>
     <tr><td>eventsketch</td><td><%= form.text_area(:eventsketch) %></td></tr>
     <tr><td class="sign-buttons"><%= submit_tag "Update event details", :class => "submit", :id=> "updateEventDetailsButton" %></td></tr>
     <% end %>
  </table>
  
  <table>
     <% form_for :event, :url => {:action => :update_video_details}, :html => {:id => 'update_video_details' } do |form| %>
     <tr><td>eventid</td><td><%= form.text_field(:eventvideo_eventid) %></td></tr>
     <tr><td>eventvideo</td><td><%= form.text_field(:eventvideo) %></td></tr>
     <tr><td>eventvideodesc</td><td><%= form.text_field(:eventvideodesc) %></td></tr>
     <tr><td class="sign-buttons"><%= submit_tag "Update video details", :class => "submit", :id=> "updateEventVideoDetailsButton" %></td></tr>
     <% end %>
  </table>
  
  <table>
     <% form_for :event, :url => {:action => :upload_media_details}, :html => {:multipart => true} do |form| %>
     <tr><td>eventid</td><td><%= form.text_field(:eventmedia_eventid) %></td></tr>
     <tr><td>eventmediafile</td><td><%= form.file_field(:eventmediafile) %></td></tr>
     <tr><td>eventmediadesc</td><td><%= form.text_field(:eventmediadesc) %></td></tr>
     <tr><td class="sign-buttons"><%= submit_tag "Upload media details", :class => "submit", :id=> "updateEventMediaDetailsButton" %></td></tr>
     <% end %>
  </table>
  
  <table>
     <% form_for :event, :url => {:action => :get_eventcontent}, :html => {:id => 'get_eventcontent_rows' } do |form| %>
     <tr><td>eventid</td><td><%= form.text_field(:get_eventid) %></td></tr>
     <tr><td class="sign-buttons"><%= submit_tag "Get Events", :class => "submit", :id=> "getEventsButton" %></td></tr>
     <% end %>
   </table>

     
  </div>
</div>

  
<% content_for :javascript do %>
    
<% end %>

