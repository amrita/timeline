

<div id = "sign-div" class="common commonalign">

  <!-- SIGN UP DIV -->
  <div id = "signupheader"> First Time User ? &nbsp Sign up here: </div>
  <div id = "signup-div" class="sign-common" >
    <br/>
    <table id="signuptable" class="clean" cellpadding="8" >
       <tr id="signuplabel" class="sign-header"><td colspan="2">Sign Up</td></tr>
       <% form_for :user, :url => {:action => :post_register} do |form| %>
        <tr><td>User Id</td><td><%= form.text_field(:userid) %></td></tr>
        <tr><td>Name</td><td><%= form.text_field(:name) %></td></tr>
        <tr><td>Birth Date</td><td><%= form.text_field(:dob) %></td></tr>
        <tr><td>Email</td><td><%= form.text_field(:email) %></td></tr>
        <tr><td>Password</td><td><input name="password" type="password" size="30" /></td></tr>
        <tr><td>Confirm password</td><td><input name="password_confirmation" type="password" size="30" /></td></tr>
        <tr><td style="text-align:left;color:red;" width="100%"><% if flash[:signup_notice] %><small>* <%= flash[:signup_notice] %></small><% end %></td>
            <td class="sign-buttons"><%= submit_tag "Sign up", :class => "submit" %></td>
        </tr>
      <% end %>
     </table> 
  </div>
  
  <!-- SIGN IN DIV -->
  <div id = "signin-div" class="sign-common">
    <table id="signintable" class="clean" cellpadding="8">
       <tr id="signinlabel" class="sign-header"><td colspan="2">Sign In</td></tr>
       <% form_for :user, :url => {:action => :post_register} do |form| %>
         <tr><td>User Id</td><td><%= form.text_field(:userid) %></td></tr>
         <tr><td>Password</td><td><input name="password" type="password" size="30" /></td></tr>
         <tr><td class="text" style="text-align:left;color:red;" width="100%"><% if flash[:signin_notice] %><small>* <%= flash[:signin_notice] %></small><% end %></td>
             <td class="sign-buttons"><%= submit_tag "Sign in", :class => "submit" %></td>
    	 </tr>
         <tr><td></td>
             <td class="sign-buttons"><%= submit_tag "Forgot Password", :class => "submit" %></td>
         </tr>
       <% end %>
     </table>
  </div>
</div>


